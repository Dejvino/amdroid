<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/bg_panel"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <HorizontalScrollView
        android:background="@drawable/bg_panel_inner"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/horizontalScrollView"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageButton android:id="@+id/goto_home"
                android:src="@drawable/ic_menu_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_menu"
                style="@style/btn_menu"/>

            <ImageButton android:id="@+id/goto_playing"
                android:src="@drawable/ic_menu_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_menu"
                android:layout_weight="1"/>

            <ImageButton android:id="@+id/goto_music"
                android:src="@drawable/ic_menu_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_menu"
                android:layout_weight="1"
                style="@style/btn_menu"/>

            <ImageButton android:id="@+id/goto_playlists"
                android:src="@drawable/ic_menu_playlists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_menu"
                android:layout_weight="1"/>

            <ImageButton android:id="@+id/goto_search"
                android:src="@drawable/ic_menu_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_menu"
                android:layout_weight="1"/>

            <ImageButton android:id="@+id/goto_preferences"
                android:src="@drawable/ic_menu_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_menu"
                android:layout_weight="1"/>
        </LinearLayout>

    </HorizontalScrollView>

    <Button android:id="@+id/goto_logs"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="10"
        android:background="@drawable/btn_menu_log"
        android:layout_weight="1"
        android:text="!" />

</LinearLayout>

