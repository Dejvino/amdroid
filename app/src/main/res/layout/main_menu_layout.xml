<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="fill_parent"
    android:paddingTop="5dip"
	android:layout_height="wrap_content"
	android:stretchColumns="1,3,5,7,9,11"
    android:background="#cc666666"
    android:paddingBottom="5dip">
	
	<TableRow>
		<ImageButton android:id="@+id/goto_home"
			android:src="@drawable/ic_menu_home"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_column="2"/>
			
		<ImageButton android:id="@+id/goto_music"
			android:src="@drawable/ic_btn_speak_now"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_column="4" />
			
		<ImageButton android:id="@+id/goto_playlists"
			android:src="@drawable/ic_menu_sort_by_size"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_column="6" />
			
		<ImageButton android:id="@+id/goto_playing"
			android:src="@drawable/ic_menu_play_clip"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_column="8" />
			
		<ImageButton android:id="@+id/goto_search"
			android:src="@drawable/ic_search_category_default"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_column="10" />
			
		<TextView android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_column="11"/>
	</TableRow>
</TableLayout>

