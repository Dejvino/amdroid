<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#444444" />
            <stroke
                android:width="1dp"
                android:color="#2f2f2f" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#444444"
                android:endColor="#2f2f2f"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2f2f2f" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>